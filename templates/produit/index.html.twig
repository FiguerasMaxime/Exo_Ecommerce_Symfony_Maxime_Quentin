{% extends 'base.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block stylesheets %}
	<style>
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		.logo img {
			width: 35px;
			height: auto;
		}

		nav {
			width: 100vw;
			height: auto;
			display: flex;
			justify-content: space-around;
		}

		nav ul {
			display: flex;
			list-style: none;
		}
		nav ul li {
			text-decoration: none;
			margin: 0 3vw;
			line-height: 8vh;
		}

		nav ul li a {
			color: #0A2472;
			text-transform: uppercase;
			font-weight: 700;
		}

		.new {
			width: 100%;
			text-align: right;
		}


		.gallery {
			margin-top: 2vh;
			margin-bottom: 10vh;
			display: flex;
			justify-content: space-between;
			width: 100%;
			flex-wrap: wrap;
	
		}

		h1 {
			padding-bottom : 30px;
		}

		.produit {
			margin-top : 7vh;
		}
		.price {
			font-size: 20px;
			color: #0A2472;
			font-weight: 800;
		}

		.stock {
			font-size: 12px;
		}

		.stock, .price {
			text-align : right;
			margin: 0;
			
		}

		h2 {
			font-size : 20px;
			color: #0A2472;
		}

		.show {
			padding: 10px 15px;
			background-color: #0A2472;
			border: 2px solid #0A2472;
			color: #00ADB5;
			text-transform: uppercase;
		}

		.edit {
			padding: 10px 15px;
			border: 2px solid #0A2472;
			color : #0A2472;
			text-transform: uppercase;
		}

		.show:hover, .edit:hover {
			color: #F8B500;
			text-decoration: none;
		}

		.card {
			width: 20vw;
		}
		.card img {
			width: 100%;
		}
	</style>

{% endblock %}

{% block body %}
	{% if is_granted('ROLE_USER') %}
		{# {{dump(app.user)}} #}
	{% endif %}
	<h1>{{'produit.titre' | trans}}</h1>
	{% if is_granted('ROLE_ADMIN') %}
		<div class="new">
			<a class="show" href="{{ path('produit_new') }}">{{'produit.nouveau' | trans}}</a>
		</div>
	{% endif %}
	<div class="gallery">
		{% for produit in produits %}
			<div class="produit">
				<h2>{{produit.nom}}</h2>
				<div class="card">
					<img src="{{ asset('uploads/'~produit.photo) }}">
				</div>
				<p class="price">{{produit.prix}}â‚¬</p>
				<p class="stock">{{produit.stock}} {{'produit.restants' | trans}} </p>
				<div class="txt_rights">
					<a class="show" href="{{ path('produit_show', {'id': produit.id}) }}">{{'produit.voir' | trans}}</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a class="edit" href="{{ path('produit_edit', {'id': produit.id}) }}">{{'produit.editer' | trans}}</a>
					{% endif %}
				</div>
			</div>
		{% else %}
			<p>{{'produit.alert' | trans}}</p>
		{% endfor %}
	</div>
	{% endblock %}
