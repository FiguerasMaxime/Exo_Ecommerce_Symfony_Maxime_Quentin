{% extends 'base.html.twig' %}

{% block title %}Hello MonCompteController!
{% endblock %}

{% block body %}

	<h2>Commandes Non Payés</h2>
	{% if panierFalse is not empty %}
		<table border="1" class="table table-striped table-inverse">
			<thead>
				<tr>
					<th>ID commande</th>
					<th>Montant</th>
					<th>Date de la commande</th>
				</tr>
			</thead>
			<tbody>
                {{dump(panierFalse)}}
				{# <tr>
					<td>{{panier.produit.id}}</td>
					<td>{{(panier.quantite) * (panier.produit.prix)}}€</td>
					<td>{{panier.date | date('d/m/Y')}}</td>
				</tr> #}
			</tbody>
		</table>
	{% else %}
		<p>Vous n'avez aucune commande non payé</p>
