<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		{% block stylesheets %}
			<style>
				* {
					margin: 0;
					padding: 0;
					box-sizing: border-box;
				}

                .logo img{
                    width: 35px;
                    height: auto;
                }

				nav {
					width: 100vw;
					height: auto;
                    display: flex;
                    justify-content : space-around;
				}

				nav ul {
					display: flex;
					list-style: none;
				}
				nav ul li {
					text-decoration: none;
					margin: 0 3vw;
					line-height: 8vh;
				}

				nav ul li a {
					color: #0A2472;
					text-transform: uppercase;
					font-weight: 700;
				}

				.card {
					width: 200px;
				}
				.card img {
					width: 100%;
				}
			</style>
		{% endblock %}
	</head>
	<body>
		<nav>
			<ul>
                <li class="logo">
					<a href="{{ path('produit_index') }}">
						<img src="{{ asset('uploads/ldlc.png') }}">
					</a>
                </li>
				<li><a href="{{ path('produit_index') }}">{{'menu.produit' | trans}}</a></li>
				<li><a href="{{ path('panier') }}">{{'menu.panier' | trans}}</a></li>
			</ul>
            <ul>
				<li><a href="{{ path('app_register') }}">{{'menu.inscription' | trans}}</a></li>
				<li>
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                        <a href="{{ path('app_logout') }}">{{'menu.deconnecter' | trans}}</a>
                    {% else %}
                         <a href="{{ path('app_login') }}">{{'menu.connecter' | trans}}</a>
                    {% endif %}
                </li>
			</ul>
		</nav>
		<div class="container">

			{% for type,messages in app.flashes %}
				{% for message in messages %}
					<p class="alert alert-{{type}}">{{message}}
					</p>
				{% endfor %}
			{% endfor %}

			{% block body %}{% endblock %}
		</div>
		{% block javascripts %}{% endblock %}
	</body>
</html>
